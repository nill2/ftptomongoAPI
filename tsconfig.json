{
    "compilerOptions": {
      "allowJs": true,
      "target": "ESNext",
      "module": "commonjs",
      "outDir": "./dist",
      "rootDir": "./src",
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
      "moduleResolution": "node",
      "noImplicitReturns": true,
      "noUnusedParameters": true,
      "noUnusedLocals": true,
      "strict": true,
      "sourceMap": true,
      "esModuleInterop": true
    },
    "ts-node": {
      // Tell ts-node CLI to install the --loader automatically
      "esm": true
    },
    "include": ["src/**/*.ts"],
    "exclude": ["node_modules"]
  }
  